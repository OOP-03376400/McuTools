                    <Rectangle Fill="Black" Grid.Column="6" Grid.Row="1" Width="75" RadiusX="5" RadiusY="5" MouseDown="Bit8Bit_MouseDown" x:Name="b8b1"/>
                    <Rectangle Fill="Black" Grid.Column="7" Grid.Row="1" Width="75" RadiusX="5" RadiusY="5" MouseDown="Bit8Bit_MouseDown" x:Name="b8b0"/>
                </Grid>
                <TextBlock Text="Port value in Hexa:" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox x:Name="Port8Value" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Width="100" IsReadOnly="True" TextAlignment="Center"/>
            </Grid>
        </TabItem>

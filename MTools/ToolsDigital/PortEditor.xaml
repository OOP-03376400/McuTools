                    <TextBlock Text="Bit 2" Grid.Row="0" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="Bit 1" Grid.Row="0" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="Bit 0" Grid.Row="0" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Rectangle Fill="Black" Grid.Column="0" Grid.Row="1" Width="75" RadiusX="5" RadiusY="5" MouseDown="Bit8Bit_MouseDown" x:Name="b8b7"/>
                    <Rectangle Fill="Black" Grid.Column="1" Grid.Row="1" Width="75" RadiusX="5" RadiusY="5" MouseDown="Bit8Bit_MouseDown" x:Name="b8b6"/>
                    <Rectangle Fill="Black" Grid.Column="2" Grid.Row="1" Width="75" RadiusX="5" RadiusY="5" MouseDown="Bit8Bit_MouseDown" x:Name="b8b5"/>
                    <Rectangle Fill="Black" Grid.Column="3" Grid.Row="1" Width="75" RadiusX="5" RadiusY="5" MouseDown="Bit8Bit_MouseDown" x:Name="b8b4"/>
